<h1>Posts#edit</h1>
<p>Find me in app/views/posts/edit.html.erb</p>

<form action="/posts/<%=@post.id%>" method="post">

  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
  작성자 : <%=@post.user.username%> <br />
  제목 : <input type="text" name="title" value="<%=@post.title%>"/><br />
  내용 : <textarea type="text" name="content"><%=@post.content%></textarea><br />
  <input type="submit" value="얍" />
</form>
